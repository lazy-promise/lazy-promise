{
  "name": "@lazy-promise/core",
  "version": "0.0.17",
  "description": "A Promise-like primitive which is lazy/cancelable, has typed errors, and emits synchronously",
  "repository": "https://github.com/lazy-promise/lazy-promise.git",
  "license": "MIT",
  "sideEffects": false,
  "main": "build/main/index.js",
  "module": "build/module/index.js",
  "types": "build/types/index.d.ts",
  "files": [
    "build/module",
    "build/main",
    "build/types"
  ],
  "scripts": {
    "build:clean": "rm -rf build",
    "build:main": "babel build/module --out-dir build/main",
    "build:module": "tsc --build tsconfig.build.json",
    "test:eslint": "eslint . --max-warnings=0",
    "test:typescript": "tsc",
    "test:vitest": "vitest run"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^8.57.0",
    "typescript": "^5.5.3",
    "vitest": "^4.0.16"
  }
}
